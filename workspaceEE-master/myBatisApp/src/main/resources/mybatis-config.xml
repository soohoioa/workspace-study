<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="jdbc.properties" />
	<settings>
		<!-- 카멜 케이스 VO 매핑 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- 쿼리 결과 필드가 null인 경우, 누락이 되서 나오지 않게 설정 -->
		<setting name="callSettersOnNulls" value="true" />
		<!-- 쿼리에 보내는 파라미터가 null인 경우, 오류가 발생하는 것 방지 -->
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	<typeAliases>
		<typeAlias alias="Student"
			type="com.mybatis3.domain.Student" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driverClassName}" />
				<property name="url" value="${jdbc.url}" />
				<property name="username" value="${jdbc.username}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
			<!-- 
			<dataSource type="POOLED"> 
				 <property name="driver" value="oracle.jdbc.driver.OracleDriver" /> 
				 <property name="url" value="jdbc:oracle:thin:@182.237.126.19:1521:XE" /> 
				 <property name="username" value="jdeveloper00" /> 
				 <property name="password" value="jdeveloper00" /> 
			</dataSource> 
			-->
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/mybatis3/dao/mapper/StudentBasicMapper.xml" />
		<mapper resource="com/mybatis3/dao/mapper/StudentMapper.xml" /> 
		<!-- <mapper resource="com/mybatis3/dao/mapper/TutorMapper.xml" />  -->
		<mapper class="com.mybatis3.dao.mapper.TutorMapper" /> 
		
		<!-- 	
		<mapper resource="com/mybatis3/dao/mapper/TutorMapper.xml" /> 
		<mapper class="com.mybatis3.dao.mapper.TutorMapper" /> 
		이렇게 작성시 에러발생하므로 class 로 작성시 resource 는 사용하면 안된다. 주석처리해주기.
		-->
		
		<!-- 
		<mapper resource="com/mybatis3/dao/mapper/CourseMapper.xml" /> 
		<mapper resource="com/mybatis3/dao/mapper/AddressMapper.xml" /> 
		-->
		
	</mappers>
</configuration>









